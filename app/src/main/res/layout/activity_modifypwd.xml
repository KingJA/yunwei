<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_register"
        layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@color/white">


        <LinearLayout style="@style/ll_statistical"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            >

            <TextView
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:text="旧密码"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/et_oldpwd"
                android:layout_height="match_parent"
                android:layout_width="200dp"
                android:password="true"
                android:background="@drawable/yuanjiao_evbg"/>

        </LinearLayout>

        <LinearLayout style="@style/ll_statistical"
            android:layout_height="40dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:text="新密码"

                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/et_newpwd"
                android:layout_height="match_parent"
                android:layout_width="200dp"
                android:password="true"
                android:background="@drawable/yuanjiao_evbg"/>

        </LinearLayout>

        <LinearLayout style="@style/ll_statistical"
            android:layout_height="40dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:text="确认新密码"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/et_newpwd2"
                android:layout_height="match_parent"
                android:layout_width="200dp"
                android:password="true"
                android:background="@drawable/yuanjiao_evbg"/>

        </LinearLayout>





    </LinearLayout>


    <include
        android:id="@+id/title_register"
        layout="@layout/layout_btn_ok"></include>
</LinearLayout>
