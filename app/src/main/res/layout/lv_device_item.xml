<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_device"
    android:clickable="true"
    android:background="@drawable/btn_nomral">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_state"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/image_online" />

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="112"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"></TextView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_devicecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="设备编码"
                android:textColor="@color/txt666"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txt_deviceremark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_devicecode"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="设备类型"
                android:textColor="@color/txt666"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txt_deviceaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_devicetype"
                android:layout_marginTop="5dp"
                android:text="设备地址"
                android:textColor="@color/txt666"
                android:textSize="13dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_accesstype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/txt_normal"
                android:text="有线"
                android:textColor="@color/txt666"/>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>