<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_title"></include>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/ll_status"
                style="@style/setting_ll"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView style="@style/wujiaoxing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="维修状态:" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_status"
                    style="@style/setting_txt"
                    android:textColor="@color/poptxt1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView style="@style/img_right" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_faulttype"
                style="@style/setting_ll"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView style="@style/wujiaoxing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="故障类型:" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_faulttype"
                    style="@style/setting_txt"
                    android:singleLine="true"
                    android:textColor="@color/poptxt1" />

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"

                    android:gravity="center">

                    <ImageView

                        style="@style/img_right" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_fault"
                style="@style/setting_ll"
                android:layout_marginTop="2dp">


                <TextView
                    style="@style/endwork_txt"
                    android:text="故障描述:" />

                <TextView
                    android:id="@+id/txt_fault"
                    style="@style/setting_txt"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView

                        style="@style/img_right" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_remark"
                style="@style/setting_ll"
                android:layout_marginTop="2dp">


                <TextView
                    style="@style/endwork_txt"
                    android:text="维修说明:" />

                <TextView
                    android:id="@+id/txt_remark"
                    style="@style/setting_txt"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView style="@style/img_right" />
                </LinearLayout>

            </LinearLayout>


            <View
                style="@style/od_view"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/ll_zbar"
                style="@style/setting_ll">


                <TextView
                    style="@style/endwork_txt"
                    android:text="更换设备ID" />

                <TextView
                    android:id="@+id/txt_changedevicecode"
                    style="@style/setting_txt"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/zbar" />
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@mipmap/photo" />

            <include layout="@layout/layout_btn_ok"></include>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
